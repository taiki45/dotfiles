[include]
  path = ~/.gitconfig.local
[color]
  status = auto
  diff = auto
  branche = auto
  ui = auto
  interactive = auto
  grep = auto
[alias]
  st = status
  co = checkout
  b = branch
  vcommit = commit -v
  acommit = commit -av
  up = pull --rebase
  diffcolor = diff --color-words
  graph = log --oneline --decorate --graph --all
  pgraph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
  logall = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
  logdiff = log -p
  logstat = log --stat
  logpretty = log --pretty=\"format:%ad %h (%an): %s\" --date=short
  oneline = log --pretty=oneline
[core]
  pager = lv -c
  excludesfile = ~/.gitignore
  autocrlf = input
[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line
